{
  "name": "aftim",
  "version": "3.6.0",
  "description": "API de conexion entre las aplicaciones de la suite de administracion y la base de datos madre",
  "main": "index.js",
  "scripts": {
    "start:api": "node server/api/dist/index.js",
    "start:data": "node server/data/index.js",
    "start:auth": "node server/auth/index.js",
    "start:file": "node server/images/index.js",
    "start:pages": "node server/pages/index.js",
    "start:nots": "node server/notifications/index.js",
    "serve:api": "concurrently \"tsc -w\" \"nodemon server/api/dist/index.js ",
    "serve:data": "nodemon server/data/index.js",
    "serve:auth": "nodemon server/auth/index.js",
    "serve:file": "nodemon server/images/index.js",
    "serve:pages": "nodemon server/pages/index.js",
    "serve:nots": "nodemon server/notifications/index.js",
    "deploy": "npm run deploy:data && npm run deploy:auth && npm run deploy:file && npm run deploy:nots && npm run deploy:api && npm run deploy:pages",
    "deploy:api": "npm run clean && npm run build && pm2 start ./server/api/dist/index.js --name api",
    "deploy:data": "pm2 start ./server/data/index.js --name data",
    "deploy:auth": "pm2 start ./server/auth/index.js --name auth",
    "deploy:file": "pm2 start ./server/images/index.js --name file",
    "deploy:pages": "pm2 start ./server/pages/index.js --name pages",
    "deploy:nots": "pm2 start ./server/notifications/index.js --name nots",
    "clean": "rimraf ./server/api/dist",
    "build": "tsc -p ./server/api/tsconfig.json",
    "test": "jest",
    "postinstall": "npm run build"
  },
  "keywords": [
    "API",
    "REST",
    "Typescript",
    "Express",
    "Microservice"
  ],
  "author": "Aftim software",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "chalk": "^3.0.0",
    "connect-history-api-fallback": "^1.6.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "jsonwebtoken": "^8.5.1",
    "lowdb": "^1.0.0",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.6",
    "rimraf": "^3.0.0",
    "telegraf": "^3.37.0",
    "twilio": "^3.42.2",
    "uuid": "^7.0.3",
    "web-push": "^3.4.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^25.1.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/supertest": "^2.0.8",
    "concurrently": "^5.0.0",
    "jest": "^25.1.0",
    "nodemon": "^1.18.10",
    "supertest": "^4.0.2",
    "ts-jest": "^25.0.0",
    "typescript": "^3.6.4"
  }
}
